// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Player {
  id String @id @default(auto()) @map("_id") @db.ObjectId

}

model Tournament {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  location String @default("Online")
  rooms String[]
}